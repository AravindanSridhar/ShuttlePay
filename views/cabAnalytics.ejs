<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css" />

    <!-- Compiled and minified Materialize CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    <!-- ChartsJS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.1/dist/Chart.min.js"></script>

    <!-- jQuery CDN -->
    <script
      src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"
    ></script>

    <!-- Custom Scripts -->
    <script src="scripts.js"></script>
    <script src="chartscripts.js"></script>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <nav style="background-color: #0A0B3C;">
    <a href="/dashboard" class="brand-logo orange-text center"
      >Smart Shuttle Pay</a
    >
  </nav>
  <body>
    <ul
      id="slide-out"
      class="sidenav sidenav-fixed"
      style="background-color: #0A0B3C;"
    >
      <li>
        <div class="user-view">
          <div class="background">
            <img src="images/logo.png" />
          </div>
          <br /><br />
        </div>
      </li>
      <li>
        <a href="/dashboard" class="waves-effect white-text"
          ><i class="material-icons icon-white" style="color: white;">layers</i
          >Dashboard</a
        >
      </li>
      <li>
        <a href="/cabs" class="waves-effect white-text"
          ><i class="material-icons icon-white" style="color: white;"
            >airport_shuttle</i
          >Cabs</a
        >
      </li>
      <li>
        <a class="waves-effect white-text active" href="/analytics"
          ><i class="material-icons icon-white" style="color: white;"
            >insert_chart</i
          >Analytics</a
        >
      </li>
      <li>
        <a class="waves-effect white-text" href="/users"
          ><i class="material-icons icon-white" style="color: white;">group</i
          >Users</a
        >
      </li>
    </ul>
    <a href="#" data-target="slide-out" class="sidenav-trigger"
      ><i class="material-icons">menu</i></a
    >
    <main>
      <div class="row">
        <div class="col s12 l4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">This Week's Payment</span>
              <canvas id="weeklyChart" height="100px" width="100px"></canvas>
            </div>
          </div>
        </div>
        <div class="col s12 l4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Route Usage</span>
              <canvas
                id="routeUsageChart"
                height="100px"
                width="100px"
              ></canvas>
            </div>
          </div>
        </div>
        <div class="col s12 l4">
          <div class="card">
            <div class="card-content">
              <span class="card-title">Average Waiting Time</span>
              <canvas
                id="averageWaitingTimeChart"
                height="100px"
                width="100px"
              ></canvas>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
